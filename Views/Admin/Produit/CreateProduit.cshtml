
@model portail.Models.Produit

@{
    ViewBag.Title = "Create Product";
}


<div style="margin: 150px 0px"></div>
<div class="container my-5">
    <div class="row">
        <div class="col-5 mx-auto ">
            <div class="card">
                <div class="card-header text-center">Fiche Produit</div>
                <div class="card-body">
                    @using (Html.BeginForm("CreateProduit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Reference, "", new { @class = "form-control", @placeholder = "Reference" })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Description, "", new { @class = "form-control", @placeholder = "Description" })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.prix, "", new { @class = "form-control", @placeholder = "Prix" })

                        </div>
                        <div class="form-group">
                            <input type="file" name="UploadFile" required />
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary" value="Valider" />
                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>