
@model portail.Models.Produit

@{
    ViewBag.Title = "Edit Product";
}

<div style="margin: 150px 0px"></div>
<div class="container my-5">
    <div class="row">
        <div class="col-5 mx-auto ">
            <div class="card">
                <div class="card-header text-center">Edit Produit</div>
                <div class="card-body">
                    @using (Html.BeginForm("EditProduit", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.Produit_id)
                        <div class="card-body">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Reference, new { @class = "form-control", @placeholder = "Reference" })

                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Description, new { @class = "form-control", @placeholder = "Description" })

                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.prix, new { htmlAttributes = new { @class = "form-control" } })
                                
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.imgUrl, new { type = "file" })

                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-primary" value="Editer" />
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
