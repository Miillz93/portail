
@model portail.Models.User

@{
    ViewBag.Title = "Register Page";
}


<div style="margin: 150px 0px"></div>
<div class="container my-5">
    <div class="row">
        <div class="col-5 mx-auto ">
            <div class="card">
                <div class="card-header text-center">Enregistrement</div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Register", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)

                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Firstname, "", new { @class = "form-control", @placeholder = "Nom" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Lastname, "", new { @class = "form-control", @placeholder = "Prenom" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "Email Déja existant", new { @class = "badge badge-danger" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "Mot de passe obligatoire", new { @class = "badge badge-danger" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Address, "", new { @class = "form-control", @placeholder = "Adresse" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-primary" value="Register" />
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>